{% extends 'base.html.twig' %}

{% block title %}Hello
	{{ controller_name }}
{% endblock %}

{% block body %}

	<br>
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				{% include "forum/_filter.html.twig" with {form: form} only %}
			</div>
			<div class="col-md-8">
				<section class="post">
					<div class="grid">
						{% if app.user %}
							{% for post in properties.items %}
								<post>
									<h2>{{ post.title }}</h2>
									<div class="metadata">Ecrit le
										{{ post.createdAt | date('d/m/Y') }}
										à
										{{ post.createdAt | date('h:i')}}
										dans la catégorie
										<span class="badge badge-primary">{{ post.category.title }}</span>
									</div>

									<div class="content">
										<p>{{ post.content | raw }}</p>
										<a href="{{ path ('forum_show', {'id': post.id}) }}" class="btn btn-warning">Lire la suite</a>
									</div>
									<br>
									<br>
								</post>
							{% endfor %}
						{% else %}
							{% for post in properties.items %}
								{% if not post.isPrivate %}
									<post>
										<h5>{{ post.title }}</h5>
										<div class="metadata">Ecrit le
											{{ post.createdAt | date('d/m/Y') }}
											à
											{{ post.createdAt | date('h:i')}}
											dans la catégorie
											<span class="badge badge-primary">{{ post.category.title }}</span>
										</div>

										<div class="content">
											<p>{{ post.content | split('</p>') |first }}</p>
											<a href="{{ path ('forum_show', {'id': post.id}) }}" class="btn btn-warning">Lire la suite</a>
										</div>
										<br>
										<br>
									</post>
								{% endif %}
							{% endfor %}
						{% endif %}

					</div>
				</section>
			</div>
		</div>
		<div class="pagination" style="display:flex; justify-content:center">
			{{ knp_pagination_render(properties) }}
		</div>
	</div>

{% endblock %}

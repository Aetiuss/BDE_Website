{% extends 'base.html.twig' %}

{% block title %}Hello
	{{ controller_name }}
{% endblock %}
{% block body %}
	<section class="post">

		{% for post in posts %}
			<post>
				<h2>{{ post.title }}</h2>
				<div class="metadata">Ecrit le
					{{ post.createdAt | date('d/m/Y') }}
					à
					{{ post.createdAt | date('h:i')}}
					dans la catégorie Politique</div>
				<div class="content">
					<img src="{{ post.picture }}" alt="">
					{{ post.content | raw }}
					<a href="{{ path ('blog_show', {'id': post.id}) }}" class="btn btn-warning">Lire la suite</a>
				</div>
			</post>

		{% endfor %}

	</section>
{% endblock %}
